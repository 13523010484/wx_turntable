/* pages/index/index.wxss */

page {
    background-color: #f5f5f5;
}

.page {
    background-color: #fff;
}

.page>navigator {
    padding: 0 24rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 30rpx;
    color: #333;
    position: relative;
    border-bottom: 1rpx #eee solid;
}

.page>navigator:after {
    content: "";
    display: inline-block;
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #c8c8cd;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -4rpx;
    position: absolute;
    top: 50%;
    right: 30rpx;
    margin-top: -8rpx;
}