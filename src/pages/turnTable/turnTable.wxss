page {
    width: 100%;
    height: 100%;
}

.container {
    z-index: 1;
    padding-top: 220rpx;
    padding-bottom: 20rpx;
    box-sizing: border-box;
    height: 100%;
    background-color: #e74143;
}

.plate-wrap-box, .plate-border {
    position: relative;
    width: 500rpx;
    height: 500rpx;
    border-radius: 50%;
}

.plate-wrap-box, .plate-border {
    z-index: 999;
    margin: 0 auto 60rpx;
}

.plate-border {
    z-index: 9;
}

.plate-wrap, .plate-wrap>image {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 9;
    border-radius: 50%;
    overflow: hidden;
    margin: auto;
}

.plate-wrap>view {
    position: absolute;
    left: 50%;
    top: 50%;
    z-index: 9;
    font-size: 22rpx;
    color: #978f8f;
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: space-between;
}

.plate-wrap>view>text {
    margin-top: 20rpx;
}

.plate-wrap, .plate-wrap>image {
    width: 664rpx;
    height: 664rpx;
}

.plate-wrap>image {
    width: 730rpx;
}

.plate-btn-wrap, .plate-btn-wrap>image {
    position: absolute;
    z-index: 10;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.plate-btn-wrap {
    border-radius: 50%;
}

.plate-btn-wrap>image {
    width: 140rpx;
}

.plate-btn-wrap>text {
    color: #fff;
    font-size: 36rpx;
    position: absolute;
    z-index: 10;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -25%);
}